<% if current_user.favorite?(post) %>
  <%= form_with(model: current_user.favorites.find_by(content_id: post.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :content_id,  post.id %>
    <%= f.submit 'Cancel Like', class: 'btn btn-secondary ' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :content_id,  post.id %>
    <%= f.submit 'Like', class: 'btn btn-primary ' %>
  <% end %>
<% end %>